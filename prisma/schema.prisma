generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GridSpan {
  small
  medium
  large
}

model Project {
  id            String   @id @default(uuid())
  titleEs       String
  titleEn       String
  descriptionEs String   @db.Text
  descriptionEn String   @db.Text
  imageUrl      String
  projectUrl    String?
  repoUrl       String?
  gridSpan      GridSpan @default(medium)
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  categories   Category[]   @relation("ProjectToCategory")
  technologies Technology[] @relation("ProjectToTechnology")

  @@index([order]) // <- Ã­ndice correctamente definido
}

model Category {
  id       String    @id @default(uuid())
  name     String    @unique
  nameEn   String    @unique
  projects Project[] @relation("ProjectToCategory")
}

model Technology {
  id       String    @id @default(uuid())
  name     String    @unique
  projects Project[] @relation("ProjectToTechnology")
}
